<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<table border="1">
  <thead>
    <tr>
      <th class="<%= 'highlight' if params[:sort] == 'title' %>">
	<%= link_to "Title", movies_path(sort: "title", direction: (params[:sort] == "title" && params[:direction] == "asc" ? "desc" : "asc")) %>
      </th>
      <th class="<%= 'highlight' if params[:sort] == 'rating' %>">
        <%= link_to "Rating", movies_path(sort: "rating", direction: (params[:sort] == "rating" && params[:direction] == "asc" ? "desc" : "asc")) %>
      </th>
      <th class="<%= 'highlight' if params[:sort] == 'release_date' %>">
        <%= link_to "Release Date", movies_path(sort: "release_date", direction: (params[:sort] == "release_date" && params[:direction] == "asc" ? "desc" : "asc")) %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3">Total Movies: <%= @movies.count %></td>
    </tr>
  </tfoot>
</table>

<%= link_to "New movie", new_movie_path %>
